{
	"name": "apathy-theme",
	"displayName": "Apathy Theme",
	"description": "A dark, sophisticated color theme with purple/black backgrounds and vibrant neon-like syntax highlighting.",
	"version": "2.3.0",
	"icon": "icon.png",
	"publisher": "coopermaruyama",
	"engines": {
		"vscode": "^1.98.0"
	},
	"categories": [
		"Themes"
	],
	"keywords": [
		"dark",
		"purple",
		"neon",
		"syntax",
		"color-theme",
		"apathy"
	],
	"imports": {
		"#/*": "./src/*"
	},
	"contributes": {
		"configurationDefaults": {
			"editor.semanticHighlighting.enabled": true
		},
		"themes": [
			{
				"label": "[apathy] minted",
				"uiTheme": "vs-dark",
				"path": "./dist/minted.json"
			},
			{
				"label": "[apathy] classic",
				"uiTheme": "vs-dark",
				"path": "./dist/apathy.json"
			},
			{
				"label": "[apathy] ocean",
				"uiTheme": "vs-dark",
				"path": "./dist/apathetic-ocean.json"
			},
			{
				"label": "[apathy] slate",
				"uiTheme": "vs-dark",
				"path": "./themes/minted.json"
			},
			{
				"label": "Apathy",
				"uiTheme": "vs-dark",
				"path": "./dist/minted.json"
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/coopmoney/apathy-theme"
	},
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "bun run src/main.ts",
		"watch": "bun run --watch src/main.ts",
		"bump:patch": "bun run src/main.ts bump patch",
		"bump:minor": "bun run src/main.ts bump minor",
		"bump:major": "bun run src/main.ts bump major",
		"vscode:prepublish": "npm run build",
		"pack": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/bun": "latest",
		"@types/vscode": "1.98.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"color": "^5.0.3",
		"tsx": "^4.20.5",
		"vsce": "^2.15.0"
	},
	"release-it": {
		"hooks": {
			"after:version:bump": "nix run nixpkgs#toml-cli -- set packages/zed/extension.toml version ${version} > /tmp/extension.toml && mv /tmp/extension.toml packages/zed/extension.toml && git add packages/zed/extension.toml"
		}
	}
}
