{
	"name": "apathy-theme",
	"displayName": "Apathy Theme",
	"description": "A dark, sophisticated color theme with purple/black backgrounds and vibrant neon-like syntax highlighting.",
	"version": "1.12.1",
	"icon": "icon.png",
	"publisher": "coopermaruyama",
	"engines": {
		"vscode": "^1.98.0"
	},
	"categories": [
		"Themes"
	],
	"keywords": [
		"dark",
		"purple",
		"neon",
		"syntax",
		"color-theme",
		"apathy"
	],
	"contributes": {
		"configurationDefaults": {
			"editor.semanticHighlighting.enabled": true
		},
		"themes": [
			{
				"label": "Apathy",
				"uiTheme": "vs-dark",
				"path": "./dist/apathy.json"
			},
			{
				"label": "Apathetic Ocean",
				"uiTheme": "vs-dark",
				"path": "./dist/apathetic-ocean.json"
			},
			{
				"label": "Apathy (Experimental)",
				"uiTheme": "vs-dark",
				"path": "./dist/apathy-experimental.json"
			},
			{
				"label": "Minted",
				"uiTheme": "vs-dark",
				"path": "./dist/minted.json"
			},
			{
				"label": "Minted Reference",
				"uiTheme": "vs-dark",
				"path": "./themes/minted.json"
			},
			{
				"label": "Slate",
				"uiTheme": "vs-dark",
				"path": "./dist/slate.json"
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/coopermaruyama/apathy-theme-vscode"
	},
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "bun run src/main.ts",
		"watch": "bun run --watch src/main.ts",
		"bump:patch": "bun run src/main.ts bump patch",
		"bump:minor": "bun run src/main.ts bump minor",
		"bump:major": "bun run src/main.ts bump major",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch:extension": "tsc -watch -p ./",
		"pack": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/bun": "latest",
		"@types/vscode": "1.98.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"color": "^5.0.3",
		"tsx": "^4.20.5"
	}
}
